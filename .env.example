# Polymarket Agents Configuration
# Copy this file to .env and configure with your actual API keys

# =====================================
# REQUIRED API KEYS
# =====================================

# Required: OpenAI API Key for LLM functionality
OPENAI_API_KEY="your_openai_api_key_here"

# Required: Polygon wallet private key (for trading)
# WARNING: Keep this secure and never commit to version control
POLYGON_WALLET_PRIVATE_KEY="your_private_key_here"

# =====================================
# MCP (Model Context Protocol) CONFIGURATION
# =====================================

# Required: Remote MCP Server Configuration
MCP_REMOTE_ENDPOINT="your_mcp_server_endpoint_here"
MCP_API_KEY="your_mcp_api_key_here"

# Example MCP endpoints you could use:
# MCP_REMOTE_ENDPOINT="https://api.heurist.ai/mcp/trading-tools"
# MCP_REMOTE_ENDPOINT="https://mcp-server.example.com/v1"

# =====================================
# TRADING CONFIGURATION
# =====================================

# Maximum trade amount in USDC
MAX_TRADE_AMOUNT_USDC="100"

# Risk tolerance (0.0 to 1.0, where 1.0 is highest risk)
RISK_TOLERANCE="0.7"

# Minimum confidence threshold for trades (0.0 to 1.0)
MIN_CONFIDENCE_THRESHOLD="0.6"

# =====================================
# POLYMARKET API ENDPOINTS
# =====================================

# Polymarket CLOB API URL
POLYMARKET_API_URL="https://clob.polymarket.com"

# Gamma API URL for enhanced market data
GAMMA_API_URL="https://gamma-api.polymarket.com"

# =====================================
# OPTIONAL: EXTERNAL DATA APIS
# =====================================

# Tavily API for web search capabilities
TAVILY_API_KEY="your_tavily_api_key"

# NewsAPI for news data
NEWSAPI_API_KEY="your_newsapi_key_here"

# CoinGecko API for cryptocurrency data
COINGECKO_API_KEY="your_coingecko_key_here"

# Alpha Vantage API for financial market data
ALPHA_VANTAGE_API_KEY="your_alpha_vantage_key_here"

# =====================================
# DEVELOPMENT & MONITORING
# =====================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL="INFO"

# Enable monitoring features
ENABLE_MONITORING="true"

# Monitoring webhook URL (optional)
MONITORING_WEBHOOK_URL=""
